
// ------------------------------------------
#define MAX_DELAY 1000
#define MIN_DELAY 0

short sw0State = 0;
float gain = 0.6;
short sampleDelay = 0;
short delayInc = 50;
alt_16 delayedBuffer[UART_BUFFER_SIZE];


void incrementDelay() {
	sampleDelay = (sampleDelay + delayInc) % MAX_DELAY;
}

void decrementDelay() {
	sampleDelay -= delayInc;
	if (sampleDelay < 0) {
		sampleDelay = 0;
	}
}
